@model SynWebCRM.Models.IndexVM

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>SynWeb CRM</h1>
    <p class="lead">Синвеб работает — вы отдыхаете.</p>
    @*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Статистика за @DateTime.Now.Year год</h2>
        <table class="table text-center">
            <tr>
                <th>
                    Месяц
                </th>
                <th>
                    Новых лиц в картотеке
                </th>
                <th>
                    Исходящих заявок
                </th>
                <th>
                    Входящих заявок
                </th>
                <th>
                    Выполненных заказов
                </th>
            </tr>

            @foreach (var item in Model.Funnel)
            {
                <tr>
                    <td>
                        @item.Month
                    </td>
                    <td>
                        @item.NewCustomers
                    </td>
                    <td>
                        @item.NewOutcomingRequests
                    </td>
                    <td>
                        @item.NewIncomingRequests
                    </td>
                    <td>
                        @item.CompletedDeals
                    </td>
                </tr>
            }
            <tr>
                <td>
                    <strong>Итог</strong>
                </td>
                <td>
                    <strong>@Model.Customers</strong>
                </td>
                <td>
                    <strong>@Model.OutcomingRequests</strong>
                </td>
                <td>
                    <strong>@Model.IncomingRequests</strong>
                </td>
                <td>
                    <strong>@Model.CompletedDeals</strong>
                </td>
            </tr>
        </table>
    </div>



</div>